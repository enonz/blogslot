<!DOCTYPE html>
<html>
  <head>
    <title>Blogslot</title>
    <%#= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'blogslots' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- front layout -->
  <div id='welcome'>

    <nav class='nav'>
      <li><a href="/">Home</a></li>
      <li><%= link_to('Articles',article_lists_url)%></li>
    <%if user_signed_in? %>
      <li><%= link_to('Manage Article',articles_path) if current_user.admin?%></li>
      <li><%= link_to('Logout', 'users/logout') %></li>

    <%else%>
      <li><%=link_to('Login',new_user_session_path) %></li>
      <li><%=link_to('Sign Up',new_user_registration_path) %></li>
    <%end%>
    </nav>
  </div>
  <section>
    
      <%= yield %>
  </section>
    
  </body>
</html>
